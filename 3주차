#include <stdio.h>

int main() {
    int N;
    printf("상품의 종류를 입력하세요 (1-100): ");
    scanf("%d", &N);

    int stock[100] = { 0 };
    int sales[100] = { 0 };
    int inventory[100] = { 0 };

    printf("각 상품의 입고수량을 입력하세요: ");
    for (int i = 0; i < N; i++) {
        printf("상품 ID %d의 입고수량: ", i + 1);
        scanf("%d", &stock[i]);
    }

    printf("당일 판매수량을 입력하세요: ");
    for (int i = 0; i < N; i++) {
        printf("상품 ID %d의 판매수량: ", i + 1);
        scanf("%d", &sales[i]);
    }

    for (int i = 0; i < N; i++) {
        inventory[i] = stock[i] - sales[i];
    }

    int product_id;
    printf("조회할 상품 ID를 입력하세요 (1-%d): ", N);
    scanf("%d", &product_id);

    printf("상품 ID %d의 재고수량: %d\n", product_id, inventory[product_id - 1]);

    printf("전체 재고수량: ");
    for (int i = 0; i < N; i++) {
        printf("%d", inventory[i]);
        if (i != N - 1) printf(" ");
    }
    printf("\n");

    printf("재고수량 : ");
    for (int i = 0; i < N; i++) {
        printf("%d ", inventory[i]);
    }
    printf("\n");

    int total_sales = 0, total_stock = 0;
    for (int i = 0; i < N; i++) {
        total_sales += sales[i];
        total_stock += sales[i];
    }
    double sales_rate = (total_sales * 100.0) / total_stock;
    printf("총 판매량 : %d (판매율 %.2f%%)\n", total_sales, sales_rate);

    int max_sales = sales[0], min_sales = sales[0];
    int max_id = 1, min_id = 1;
    for (int i = 1; i < N; i++) {
        if (sales[i] > max_sales) {
            max_sales = sales[i];
            max_id = i + 1;
        }
        if (sales[i] < min_sales) {
            min_sales = sales[i];
            min_id = i + 1;
        }
    }
    printf("가장 많이 판매된 상품 : ID %d, 판매량 %d\n", max_id, max_sales);
    printf("가장 적게 판매된 상품 : ID %d, 판매량 %d\n", min_id, min_sales);

    for (int i = 0; i < N; i++) {
        if (inventory[i] <= 2) {
            printf("상품 ID %d : 재고부족(%d)\n", i + 1, inventory[i]);
        }
    }

    return 0;
}
